{
  "manifest_version" : 2,
  "name": "Easy Fill",
  "version": "1.0",

  "description": "A mozilla add-ons to make Developers more lazy :P",  //Temporary description

  "browser_action": {
  		"default_icon": "icons/48.png",
  		"default_popup": "index.html",
  		"default_title": "easyFill"
  	},

  	"background": {
  		"scripts": ["assets/js/background.js"]
  	},

  	"content_scripts": [
  		{
  			"matches": ["*://*/*"],
  			"js": ["assets/js/jquery.js", "assets/js/content.js"]
  		}
  	],

  	"permissions": [
  		"contextMenus"
  	],

  	"icons": {
  		"48": "icons/48.png"

  	}
  }
